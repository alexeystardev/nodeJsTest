<%- include ('./main/head') %>
<%- include ('./main/nav') %>
<section class="page-section" id="contact">
	<div class="container mt-5">
		<div class="text-center">
			<h2 class="section-heading">Thank You <span class="text-warning"><%=name%></span> to Contact Us!<br>Your
				Contacts is:</h2>
			<div class="table-responsive">
				<table class="table table-dark shadow-lg  rounded">
					<thead>
						<tr>
							<th scope="col">Name</th>
							<th scope="col">Email</th>
							<th scope="col">Phone</th>
							<th scope="col">Message</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<th scope="row"><%=name%></th>
							<td><%=email%></td>
							<td><%=phone%></td>
							<td><%=message%></td>
						</tr>
					</tbody>
				</table>
			</div>
			<h3 class="section-subheading text-warning">It's Nice To Meet You!</h3>
			<a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="/">Back to home page</a>
		</div>
	</div>
</section>
<%- include('./main/footer')%>